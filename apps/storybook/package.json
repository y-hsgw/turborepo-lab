{
  "name": "storybook",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "type": "module",
  "config": {
    "web_storybook_url": "http://localhost:7007",
    "ui_storybook_url": "http://localhost:7008"
  },
  "scripts": {
    "lint": "eslint .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "screenshot:web": "pnpm dlx wait-on $npm_package_config_web_storybook_url && storycap $npm_package_config_web_storybook_url -o __screenshots__/web",
    "screenshot:ui": "pnpm dlx wait-on $npm_config_ui_storybook_url && storycap $npm_config_ui_storybook_url -o __screenshots__/ui",
    "screenshot": "pnpm screenshot:web & pnpm screenshot:ui",
    "reg-suit": "reg-suit run"
  },
  "dependencies": {
    "next": "15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-docs": "^9.0.18",
    "@storybook/nextjs": "^9.0.18",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.2",
    "eslint-plugin-storybook": "^9.0.18",
    "reg-suit": "^0.14.4",
    "storybook": "^9.0.18",
    "storycap": "^5.0.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
