{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "build/**", "dist/**"],
      "env": ["APP_NAME", "NODE_ENV"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!README.md",
        ".env.production.local",
        ".env.local",
        ".env.production",
        ".env"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["$TURBO_DEFAULT$", "!README.md"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
